<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettingActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_account">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/account_toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/img_close_profile"
                    android:src="@drawable/close"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/save_edited_info"
                    android:id="@+id/img_save_profile"
                    android:layout_marginRight="15dp"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_bar_account"
        android:layout_marginTop="15dp"
        android:id="@+id/circle_account"
        android:src="@drawable/profile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle_account"
        android:text="Change Image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:id="@+id/txt_change_account"
        android:textColor="@color/ping"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_change_account"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Full Name"
        android:id="@+id/edt_fullname_profile"
        android:inputType="text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_fullname_profile"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:hint="User Name"
        android:id="@+id/username_profile"
        android:layout_marginRight="20dp"
        android:inputType="text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_profile"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:hint="Bio"
        android:id="@+id/bio_profile_accout"
        android:layout_marginRight="20dp"
        android:inputType="text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_delete_accout"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn_logout_accout"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_black_background"
        android:textColor="@color/teal_700"
        android:text="Logout"
        android:textSize="20dp"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@color/teal_700"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn_delete_accout"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:text="Delete Account"
        android:textAllCaps="false"/>
</RelativeLayout>