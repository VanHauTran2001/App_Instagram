<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_black_background"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/user_profile_search"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:layout_below="@id/user_profile_search"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:id="@+id/txt_username_search"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="full name"
            android:layout_below="@id/txt_username_search"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:id="@+id/txt_fullname_search"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt_fullname_search"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_black_background"
            android:text="Follow"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:id="@+id/btn_follow_search"/>
    </RelativeLayout>
</RelativeLayout>